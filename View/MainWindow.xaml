<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Soundify"
    xmlns:View="clr-namespace:View"
    xmlns:components="clr-namespace:View.Components"
    x:Class="Soundify.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <View:DataContext/>
    </Window.DataContext>

    <Grid>
        <Grid Background="#FF424D82" HorizontalAlignment="Left" Width="92">
            <components:MenuButton ScreenName="HomeScreen"     Content="Home"      Margin="21,10,21,0" />
            <components:MenuButton ScreenName="PlaylistMenuScreen" Content="Playlists" Margin="16,43,16,0" />
            <components:MenuButton ScreenName="QueueScreen"    Content="Queue"     Margin="24,77,24,0" />
        </Grid>
        <Grid Margin="92,0,0,0" Background="#FF363F63" Height="74" VerticalAlignment="Bottom">
            <Button x:Name="Play" Content="=" Margin="336,0,336,0" VerticalAlignment="Center" Click="Button_Click" Height="34" Foreground="White" BorderBrush="{x:Null}" Background="#FF424D82"/>
            <Slider x:Name="Duration" HorizontalAlignment="Center" Margin="0,-8,0,0" IsMoveToPointEnabled="True" Foreground="White" VerticalAlignment="Top" Width="708" Height="18" Minimum="0.00" Maximum="{Binding TotalTime, Mode=OneWay}" Value="{Binding CurrentTime, Mode=OneWay}" ValueChanged="Duration_ValueChanged"/>
            <Label x:Name="CurrentTime" Content="{Binding CurrentTimeLabel, Mode=OneWay}" HorizontalAlignment="Left" Margin="0,-26,0,0" VerticalAlignment="Top" Width="49" />
            <Label x:Name="TotalTime" Content="{Binding TotalTimeLabel, Mode=OneWay}" HorizontalAlignment="Left" Margin="659,-26,0,0" VerticalAlignment="Top" Width="49" />
            <Button x:Name="Prev" Content="Prev" Margin="269,0,0,0" VerticalAlignment="Center" Click="Prev_Button_Click" Height="34" Foreground="White" BorderBrush="{x:Null}" Background="#FF424D82" Width="50" HorizontalAlignment="Left"/>
            <Button x:Name="Next" Content="Next" Margin="392,0,0,0" VerticalAlignment="Center" Click="Next_Button_Click" Height="34" Foreground="White" BorderBrush="{x:Null}" Background="#FF424D82" Width="50" HorizontalAlignment="Left"/>
            <Button x:Name="Loop" Content="Loop" Margin="191,0,0,0" VerticalAlignment="Center" Click="Loop_Button_Click" Height="34" Foreground="White" BorderBrush="{x:Null}" Background="#FF424D82" Width="50" HorizontalAlignment="Left"/>
            <Button x:Name="Shuffle" Content="Shuffle" Margin="470,0,0,0" VerticalAlignment="Center" Click="Shuffle_Button_Click" Height="34" Foreground="White" BorderBrush="{x:Null}" Background="#FF424D82" Width="50" HorizontalAlignment="Left"/>
            <Slider x:Name="Volume" HorizontalAlignment="Left" Margin="614,0,0,0" IsMoveToPointEnabled="True" VerticalAlignment="Center" Width="70" Maximum="1.0" ValueChanged="Volume_ValueChanged" Value="{Binding Volume, Mode=OneWay}" SmallChange="0.01" LargeChange="0.1"/>
        </Grid>
        <Grid Margin="92,0,0,0" Background="#FF303651" Height="54" VerticalAlignment="Top">
            <Label Content="{Binding PageName}" HorizontalAlignment="Left" Margin="41,10,0,0" VerticalAlignment="Top" FontSize="22" Foreground="White" Width="191" Height="17"/>
            <TextBox HorizontalAlignment="Center" Text="Search..." TextWrapping="Wrap" VerticalAlignment="Center" Width="192" Height="25"/>
        </Grid>
        <ContentPresenter x:Name="MainContent" Grid.Row="0" Margin="92,54,0,79" ContentTemplate="{StaticResource SongInfo}"/>
    </Grid>
</Window>