<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Soundify"
    xmlns:View="clr-namespace:View" x:Class="Soundify.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <View:DataContext/>
    </Window.DataContext>

    <Grid>
        <Grid Background="#FF424D82" HorizontalAlignment="Left" Width="92">
            <Button Content="Home" Margin="21,10,21,0" VerticalAlignment="Top" Click="HomeButton_Click" BorderBrush="{x:Null}" Background="#FF424D82" Foreground="White"/>
            <Button Content="Playlists" Margin="16,43,16,0" VerticalAlignment="Top" Click="PlaylistButton_Click" Background="#FF424D82" Foreground="White" BorderBrush="{x:Null}"/>
            <Button Content="Queue" Margin="24,77,24,0" VerticalAlignment="Top" Background="#FF424D82" Foreground="White" BorderBrush="{x:Null}" Click="QueueButton_Click"/>
        </Grid>
        <Grid Margin="92,0,0,0" Background="#FF363F63" Height="74" VerticalAlignment="Bottom">
            <Button x:Name="Play" Content="=" Margin="336,0,336,0" VerticalAlignment="Center" Click="Button_Click" Height="34" Foreground="White" BorderBrush="{x:Null}" Background="#FF424D82"/>
            <Slider x:Name="Duration" HorizontalAlignment="Center" Margin="0,-8,0,0" Foreground="White" VerticalAlignment="Top" Width="708" Height="18" Minimum="0.00" Maximum="{Binding TotalTime, Mode=OneWay}" Value="{Binding CurrentTime, Mode=OneWay}" ValueChanged="Duration_ValueChanged"/>
            <Label x:Name="CurrentTime" Content="{Binding CurrentTimeLabel, Mode=OneWay}" HorizontalAlignment="Left" Margin="0,-26,0,0" VerticalAlignment="Top" Width="49" />
            <Label x:Name="TotalTime" Content="{Binding TotalTimeLabel, Mode=OneWay}" HorizontalAlignment="Left" Margin="659,-26,0,0" VerticalAlignment="Top" Width="49" />
            <Button x:Name="Prev" Content="Prev" Margin="281,0,392,0" VerticalAlignment="Center" Click="Button_Click" Height="34" Foreground="White" BorderBrush="{x:Null}" Background="#FF424D82" Width="38"/>
            <Button x:Name="Next" Content="Next" Margin="388,0,284,0" VerticalAlignment="Center" Click="Button_Click" Height="34" Foreground="White" BorderBrush="{x:Null}" Background="#FF424D82" Width="38"/>
            <Button x:Name="Loop" Content="Loop" Margin="219,0,449,0" VerticalAlignment="Center" Click="Button_Click" Height="34" Foreground="White" BorderBrush="{x:Null}" Background="#FF424D82" Width="38"/>
            <Button x:Name="Shuffle" Content="Shuffle" Margin="441,0,232,0" VerticalAlignment="Center" Click="Button_Click" Height="34" Foreground="White" BorderBrush="{x:Null}" Background="#FF424D82" Width="38"/>
            <Slider x:Name="Volume" HorizontalAlignment="Left" Margin="614,0,0,0" VerticalAlignment="Center" Width="70"/>
        </Grid>
        <Grid Margin="92,0,0,0" Background="#FF303651" Height="54" VerticalAlignment="Top">
            <Label Content="{Binding PageName}" HorizontalAlignment="Left" Margin="41,10,0,0" VerticalAlignment="Top" FontSize="22" Foreground="White" Width="191" Height="17"/>
            <TextBox HorizontalAlignment="Center" Text="Search..." TextWrapping="Wrap" VerticalAlignment="Center" Width="192" Height="25"/>
        </Grid>
        <ContentPresenter x:Name="MainContent" Grid.Row="0" Margin="92,54,0,79" ContentTemplate="{StaticResource HomeScreen}"/>
    </Grid>
</Window>