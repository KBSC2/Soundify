<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Soundify"
        xmlns:View="clr-namespace:View" x:Class="Soundify.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <View:DataContext/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="239*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Home" Content="Home" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Click="Button1_Click"/>
        <Button x:Name="Playlists" Content="Playlists&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.375,0.39" Click="Button2_Click" Width="52" Height="20"/>
        <Button x:Name="Play" Content="&gt;" Margin="378,304,378,0" VerticalAlignment="Top" Click="Button_Click" Height="45" RenderTransformOrigin="0.517,0.645"/>
        <Slider x:Name="Duration" HorizontalAlignment="Center" Margin="0,369,0,0" VerticalAlignment="Top" Width="342" RenderTransformOrigin="0.5,0.5" Height="18" Minimum="0.00" Maximum="{Binding TotalTime, Mode=OneWay}" Value="{Binding CurrentTime, Mode=OneWay}" ValueChanged="Duration_ValueChanged"/>
        <Label x:Name="CurrentTime" Content="{Binding CurrentTime, Mode=OneWay}" HorizontalAlignment="Left" Margin="152,365,0,0" VerticalAlignment="Top" />
        <Label x:Name="TotalTime" Content="{Binding TotalTime, Mode=OneWay}" HorizontalAlignment="Left" Margin="599,365,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>