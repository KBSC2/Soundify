<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:DataContexts="clr-namespace:View.DataContexts"
                    x:Class="View.Screens.AdminScreen">
    <DataTemplate x:Key="AdminScreen">
        <!-- Start homescreen screen -->
        <Grid Margin="0,0,0,0" Background="#FF303651" >
            <TextBlock Text="{Binding NumberOfArtistRequests, StringFormat='You have \{0\} artist requests'}"  HorizontalAlignment="Left" Margin="90,82,0,0" VerticalAlignment="Top" FontSize="26.5" Foreground="White" FontWeight="Bold"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>